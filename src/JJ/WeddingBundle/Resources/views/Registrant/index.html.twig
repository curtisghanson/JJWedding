{% extends 'JJWeddingBundle::manage.html.twig' %}

{% block main %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title"><span class="fa fa-user"></span> Registrants</h4>
        </div>
        <div class="panel-body">

            <table class="table table-bordered table-condensed table-hover table-striped">
                <thead>
                    <tr>
                        <th>Actions</th>
                        <th>Name</th>
                        <th>Address</th>
                        <th>City</th>
                        <th>State</th>
                        <th>Zip</th>
                        <th>Phone</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td>
                            <div class="btn-group">
                                <a href="{{ path('registrant_show', { 'id': entity.id }) }}" class="btn btn-xs btn-default" title="view"><span class="fa fa-search"></span></a>
                                <a href="{{ path('registrant_edit', { 'id': entity.id }) }}" class="btn btn-xs btn-default" title="edit"><span class="fa fa-pencil"></span></a>
                            </div>
                        </td>
                        <td>
                            {{ entity.prefix }}
                            {{ entity.firstName }}
                            {{ entity.middleName }}
                            {{ entity.lastName }}
                            {{ entity.suffix }}
                        </td>
                        <td>
                            {{ entity.street1 }}<br/>
                            {{ entity.street2 }}
                        </td>
                        <td>{{ entity.city }}</td>
                        <td>{{ entity.state }}</td>
                        <td>{{ entity.zip }}</td>
                        <td>{{ entity.phone }}</td>
                        <td>{{ entity.email }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
        <div class="panel-footer">
            <a href="{{ path('registrant_new') }}" class="btn btn-xs btn-default" title="new registrant">
                <span class="fa fa-plus-circle"></span> New Registrant
            </a>
        </div>
    </div>

{% endblock main %}
