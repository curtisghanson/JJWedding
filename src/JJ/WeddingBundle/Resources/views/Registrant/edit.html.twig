{% extends 'JJWeddingBundle::manage.html.twig' %}

{% block main %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title"><span class="fa fa-user"></span> New Registrant</h4>
        </div>
        <div class="panel-body">

            {{ form_start(edit_form) }}

                <div>
                    {{ form_errors(edit_form) }}
                </div>

                <div class="row">
                    <div class="form-group col-sm-2">
                        {{ form_label(edit_form.prefix, 'Title') }}
                        {{ form_errors(edit_form.prefix) }}
                        {{ form_widget(edit_form.prefix, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group col-sm-3">
                        {{ form_label(edit_form.firstName, 'First') }}
                        {{ form_errors(edit_form.firstName) }}
                        {{ form_widget(edit_form.firstName, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group col-sm-2">
                        {{ form_label(edit_form.middleName, 'MI') }}
                        {{ form_errors(edit_form.middleName) }}
                        {{ form_widget(edit_form.middleName, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group col-sm-3">
                        {{ form_label(edit_form.lastName, 'Last') }}
                        {{ form_errors(edit_form.lastName) }}
                        {{ form_widget(edit_form.lastName, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group col-sm-2">
                        {{ form_label(edit_form.suffix, 'Suffix') }}
                        {{ form_errors(edit_form.suffix) }}
                        {{ form_widget(edit_form.suffix, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-sm-2">
                        {{ form_label(edit_form.gender) }}
                        {{ form_errors(edit_form.gender) }}
                        {{ form_widget(edit_form.gender, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group col-sm-2">
                        {{ form_label(edit_form.headOfParty, 'Head') }}
                        {{ form_errors(edit_form.headOfParty) }}
                        {{ form_widget(edit_form.headOfParty, {'attr': {'class': 'form-control-checkbox'}}) }}
                    </div>
                    <div class="form-group col-sm-2">
                        {{ form_label(edit_form.orderInParty, 'Order') }}
                        {{ form_errors(edit_form.orderInParty) }}
                        {{ form_widget(edit_form.orderInParty, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group col-sm-2">
                        {{ form_label(edit_form.adultOrChild, 'Adult/Child') }}
                        {{ form_errors(edit_form.adultOrChild) }}
                        {{ form_widget(edit_form.adultOrChild, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group col-sm-4">
                        {{ form_label(edit_form.party, 'Party') }}
                        {{ form_errors(edit_form.party) }}
                        {{ form_widget(edit_form.party, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-sm-12">
                        {{ form_label(edit_form.street1, 'Street 1') }}
                        {{ form_errors(edit_form.street1) }}
                        <div class="input-group">
                            <span class="input-group-addon">
                                <span class="fa fa-map-marker"></span>
                            </span>
                            {{ form_widget(edit_form.street1, {'attr': {
                                'class': 'form-control',
                                'placeholder': 'Street 1'
                            }}) }}
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-sm-12">
                        {{ form_label(edit_form.street2, 'Street 2') }}
                        {{ form_errors(edit_form.street2) }}
                        <div class="input-group">
                            <span class="input-group-addon">
                                <span class="fa fa-map-marker"></span>
                            </span>
                            {{ form_widget(edit_form.street2, {'attr': {
                                'class': 'form-control',
                                'placeholder': 'Street 2'
                            }}) }}
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-sm-6">
                        {{ form_label(edit_form.city, 'City') }}
                        {{ form_errors(edit_form.city) }}
                        {{ form_widget(edit_form.city, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group col-sm-2">
                        {{ form_label(edit_form.state, 'ST') }}
                        {{ form_errors(edit_form.state) }}
                        {{ form_widget(edit_form.state, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group col-sm-4">
                        {{ form_label(edit_form.zip, 'ZIP') }}
                        {{ form_errors(edit_form.zip) }}
                        {{ form_widget(edit_form.zip, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-sm-5">
                        {{ form_label(edit_form.phone, 'Phone') }}
                        {{ form_errors(edit_form.phone) }}
                        <div class="input-group">
                            <span class="input-group-addon">
                                <span class="fa fa-phone"></span>
                            </span>
                            {{ form_widget(edit_form.phone, {'attr': {
                                'class': 'form-control',
                                'placeholder': 'Phone'
                            }}) }}
                        </div>
                    </div>
                    <div class="form-group col-sm-7">
                        {{ form_label(edit_form.email, 'Email') }}
                        {{ form_errors(edit_form.email) }}
                        <div class="input-group">
                            <span class="input-group-addon">@</span>
                            {{ form_widget(edit_form.email, {'attr': {
                                'class': 'form-control',
                                'placeholder': 'Email'
                            }}) }}
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-sm-3 col-sm-offset-9">
                        {{ form_widget(edit_form.submit, {'attr': {'class': 'btn btn-default form-control'}}) }}
                    </div>
                </div>

            {{ form_end(edit_form) }}

        </div>

        <div class="panel-footer">
            <a href="{{ path('registrant') }}">Back to list</a>
            {{ form(delete_form) }}
        </div>
    </div>

{% endblock main %}
