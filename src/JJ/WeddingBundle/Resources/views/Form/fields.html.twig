{% block button_widget %}
{% spaceless %}
    {% if label is empty %}
        {% set label = name|humanize %}
    {% endif %}
    <button type="{{ type|default('button') }}" {{ block('button_attributes') }}>{% if icon is defined %}<span class="{{ icon }}"></span>{% endif %} {% autoescape false %}{{ label|trans({}, translation_domain) }}{% endautoescape %}</button>
