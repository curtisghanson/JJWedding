{% extends 'JJWeddingBundle::manage.html.twig' %}

{% block main %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title"><span class="fa fa-picure-o"></span> New Photo</h4>
        </div>
        <div class="panel-body">
            {{ form_start(form) }}

                <div>
                    {{ form_errors(form) }}
                </div>

                <div class="row">
                    <div class="form-group col-sm-4 col-sm-offset-4">
                        <img id="preview" src="#" alt="image preview" class="img-responsive"/>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-sm-6">
                        {{ form_label(form.file, 'File') }}
                        {{ form_errors(form.file) }}
                        <div class="input-group">
                            <span class="input-group-btn">
                                <span class="btn btn-default btn-file">
                                    Browse
                                    {{ form_widget(form.file, {'attr': {'class': 'form-control'}}) }}
                                </span>
                            </span>
                            <input type="text" class="form-control" readonly="">
                        </div>
                    </div>
                    <div class="form-group col-sm-6">
                        {{ form_label(form.filename, 'Filename') }}
                        {{ form_errors(form.filename) }}
                        {{ form_widget(form.filename, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-sm-12">
                        {{ form_label(form.title, 'Title') }}
                        {{ form_errors(form.title) }}
                        {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                 <div class="row">
                    <div class="form-group col-sm-12">
                        {{ form_label(form.description, 'Description') }}
                        {{ form_errors(form.description) }}
                        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-sm-6">
                        {{ form_label(form.galleryName, 'Gallery Name') }}
                        {{ form_errors(form.galleryName) }}
                        {{ form_widget(form.galleryName, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group col-sm-6">
                        {{ form_label(form.orderInGallery, 'Order') }}
                        {{ form_errors(form.orderInGallery) }}
                        {{ form_widget(form.orderInGallery, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-sm-3 col-sm-offset-9">
                        {{ form_widget(form.submit, {'attr': {'class': 'btn btn-default form-control'}}) }}
                    </div>
                </div>

                {{ form_rest(form) }}
            {{ form_end(form) }}

        </div>
        <div class="panel-footer">
            <a href="{{ path('document') }}" class="btn btn-xs btn-danger" title="cancel">
                <span class="fa fa-times-circle"></span> Cancel</span>
            </a>
        </div>
    </div>
{% endblock %}