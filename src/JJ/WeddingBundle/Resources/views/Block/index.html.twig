{% extends 'JJWeddingBundle::manage.html.twig' %}

{% block main %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title"><span class="fa fa-list-alt"></span> Blocks</h4>
        </div>
        <div class="panel-body">
            <table class="table table-bordered table-condensed table-hover table-striped">
                <thead>
                    <tr>
                        <th>Actions</th>
                        <th>Title</th>
                        <th>Body</th>
                        <th>Location</th>
                    </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td>
                            <div class="btn-group">
                                <a href="{{ path('block_show', { 'id': entity.id }) }}" class="btn btn-xs btn-default" title="view"><span class="fa fa-search"></span></a>
                                <a href="{{ path('block_edit', { 'id': entity.id }) }}" class="btn btn-xs btn-default" title="edit"><span class="fa fa-pencil"></span></a>
                            </div>
                        </td>
                        <td>{{ entity.title }}</td>
                        <td>{{ entity.body|slice(0, 80) ~ '...' }}</td>
                        <td><code>{{ entity.location }}</code></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="panel-footer">
            <a href="{{ path('block_new') }}" class="btn btn-xs btn-default" title="new block">
                <span class="fa fa-plus-circle"></span> New Block
            </a>
        </div>
    </div>
{% endblock main %}
