{% extends 'JJWeddingBundle::manage.html.twig' %}

{% block main %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title"><span class="fa fa-thumb-tack"></span> Pins</h4>
        </div>
        <div class="panel-body">

            <table class="table table-bordered table-condensed table-hover table-striped">
                <thead>
                    <tr>
                        <th>Actions</th>
                        <th>Name</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td>
                            <div class="btn-group">
                                <a href="{{ path('pin_show', { 'id': entity.id }) }}" class="btn btn-xs btn-default" title="view"><span class="fa fa-search"></span></a>
                                <a href="{{ path('pin_edit', { 'id': entity.id }) }}" class="btn btn-xs btn-default" title="edit"><span class="fa fa-pencil"></span></a>
                            </div>
                        </td>
                        <td>{{ entity.name }}</td>
                        <td>{{ entity.description }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        </div>
        <div class="panel-footer">
            <a href="{{ path('pin_new') }}" class="btn btn-xs btn-default" title="new pin">
                <span class="fa fa-plus-circle"></span> New Pin</span>
            </a>
        </div>
    </div>

{% endblock main %}