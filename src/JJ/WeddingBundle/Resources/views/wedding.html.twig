{% block weddingHead %}
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <h3><span class="fa fa-bell-o"></span> the wedding</h3>
            </div>
        </div>
    </div>
{% endblock weddingHead %}

{% block weddingBody %}
    <div class="container">
        <div class="row">
            <div class="col-sm-7">
                {% for entity in entities %}
                    {% if entity.location == 'wedding-map' %}
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                            <a href="{{ path('block_edit', { 'id': entity.id }) }}" class="edit-box">
                                <span class="fa fa-pencil"></span>
                            </a>
                        {% endif %}
                        {{ entity.body|raw }}
                    {% endif %}
                {% endfor %}
            </div>
